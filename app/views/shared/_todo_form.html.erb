<%= form_for(@todo) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new todo..." %>
    <%= f.label :due_date %><br />
    <%= f.date_select :due_date %>    
  </div>
  <%= f.submit "Let's Do This", class: "btn btn-large btn-primary" %>
<% end %>