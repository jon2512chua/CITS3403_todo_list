<%= form_for(@item) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :name, placeholder: "Item name" %>
  </div>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new item..." %>
  </div>

  <%= f.submit "Add", class: "btn btn-large btn-primary" %>
<% end %>
