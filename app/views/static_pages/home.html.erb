<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/todo_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Todo Feed</h3>
      <%= render 'shared/feed' %>
    </div>    
  </div>  
<% else %>
  <div class="center hero-unit">
	<% provide(:title, 'Home') %>
	<h1>My Todos</h1>
	<p>
	  This is the home page for My Todos.
	</p>
	<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>
<% end %> 