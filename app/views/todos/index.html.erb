<div class="row">
  <div class="span6 offset3">
    <% provide(:title, 'Listing todos') %>
    <h1>Listing todos</h1>
    <table>
      <tr>
        <th>Content</th>
        <th>User</th>
        <th>Due date</th>
        <th>Completed</th>
      </tr>

    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.content %></td>
        <td><%= todo.user_id %></td>
        <td><%= todo.due_date %></td>
        <td><%= todo.completed %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </table>

    <br />
  </div>
</div>

<%= link_to 'New Todo', new_todo_path %>
