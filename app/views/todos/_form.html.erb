<div class="row">
  <div class="span6 offset3">
    <%= form_for(@todo) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :content %><br />
      <%= f.text_field :content %>

      <%= f.label :due_date %><br />
      <%= f.date_select :due_date %>

      <%= f.submit "Create my Todo", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>