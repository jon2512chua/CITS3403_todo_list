<div class="row">
  <aside class="span5 offset3">
    <% provide(:title, @todo.content) %>
    <h1><%= @todo.content %></h1>
    <section>
      <h1>
		    <b>Content:</b>
		    <%= @todo.content %>
      </h1>
      <br>
      <h1>
		    <b>Belongs:</b>
		    <%= @todo.user_id %>
      </h1>
      <h1>
		    <b>Due date:</b>
		    <%= @todo.due_date %>
      </h1>
      <h1>
  		  <b>Completed:</b>
  		  <%= @todo.completed %>
      </h1>            
    </section>
  </aside>
</div>

<%= link_to 'Edit', edit_todo_path(@todo) %> |
<%= link_to 'Back', todos_path %>
