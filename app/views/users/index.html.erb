 <div class="row">
  <div class="span6 offset3">
    <% provide(:title, 'All users') %>
    <h1>All users</h1>
    
    <!-- will_paginate expects an object of class ActiveRecord::Relation. -->
    <%= will_paginate %>

    <ul class="users">
      <!-- Rails infers that @users is a list of User objects; moreover, when called with a collection of users, Rails automatically iterates through them and renders each one with the _user.html.erb partial. -->
      <%= render @users %>
    </ul>

    <%= will_paginate %>

  </div>
</div> 
