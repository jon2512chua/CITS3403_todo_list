<div class="row">
  <aside class="span5 offset3">
    <%= render 'layouts/header' %>
    <% provide(:title, @user.username) %>
    <h1><%= @user.username %></h1>
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <br>
