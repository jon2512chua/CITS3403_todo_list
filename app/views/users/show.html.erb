<div class="row">
  <div class="span8 offset2">
    <aside>
      <% provide(:title, @user.username) %>
      <h1><%= @user.username %></h1>
      <section>
        <h1>
          <%= gravatar_for @user %>
        </h1>

        <h3><%= @user.name %></h3>
        <br/>
        <h3><%= @user.email %></h3>
      </section>
    </aside>    
    <% if @user.todos.any? %>
      <h3>Todos (<%= @user.todos.count %>)</h3>
      <ol class="todos">
        <%= render @todos %>
      </ol>
      <%= will_paginate @todos %>
    <% end %>
  </div>
</div>